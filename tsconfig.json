{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["DOM", "ES2020"],
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "@renderer/*": ["src/renderer/*"],
        "@server/*": ["src/server/*"],
        "@main/*": ["src/main/*"]
      },
      "outDir": "dist"
    },
    "include": ["src/**/*", "vite.config.mts", "prisma/prisma.config.ts"],
    "exclude": ["node_modules", "dist"]
  }
  